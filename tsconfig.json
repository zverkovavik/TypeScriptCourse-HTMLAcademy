    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./js",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["src/**/*.test.ts"]
}
