{
    "root": true,
    "extends": [
        "plugin: eslint:recommended",
        "htmlacademy/vanilla",
        "plugin: @typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es2020": true,
        "browser": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error"
    }
}